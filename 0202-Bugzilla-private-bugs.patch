+    _TS_ASSERT_BOOLEAN(expression, 1, message)
+
+#define TS_ASSERT_TRUE(expression) \
+    TS_ASSERT_TRUE_MESSAGE(expression, NULL)
+
+#define TS_ASSERT_FALSE_MESSAGE(expression, message) \
