+#define _TS_ASSERT_BOOLEAN(expression, expected, message) \
+    do { \
+        const int result = (expression); \
+        if (result == expected) { \
+            TS_SUCCESS("%s ("#expression" == %s)\n", message ? message : "Assert", expected ? "TRUE" : "FALSE"); \
